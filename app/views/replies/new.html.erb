<h4>Replying to '<%= @post.title %>'</h4>

<%= form_for([@post, @post.replies.build]) do |f| %>

<% if @reply.errors.any? %>
	<div id="error_explanation">
	  <div class="alert alert-error">
			<p class="text-danger">
	    	<% @reply.errors.full_messages.each do |msg| %>
	     		<%= msg %>.<br />
	    	<% end %>
	  	</p>
		</div>
	</div>
<% end %>
	
	<div class="row">
		<div class='col-xs-4'>
			<%= f.text_area :content, { class: 'form-control', rows: '3', placeholder: "Speak your mind." } %><br />
		</div>
	</div>
	<div class='form-group'>
	  <%= f.submit "Reply", class:'btn btn-default' %>
	</div>
<% end %>
