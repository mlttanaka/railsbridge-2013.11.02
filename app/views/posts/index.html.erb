<h3>All Posts</h3>
<table class='table table-bordered table-striped'>
	<thead>
		<tr>
			<th>Title</th>
			<th>Author</th>
			<th>Date Posted</th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |post| %>
		<tr>
			<td><%= link_to post.title, post_path(post) %></td>
			<td><%= post.user.email %></td>
			<td><%= post.created_at.to_formatted_s(:mon_day_year) %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<%= button_to 'New Post', new_post_path, method: :get, class: 'btn btn-default' %>