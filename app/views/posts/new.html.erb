<h1>New Post</h1>
<%= form_for @post, { class: 'form-horizontal', role: 'form' } do |f| %>
	<div class='form-group'>
		<%= f.label :title, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.text_field :title, { class: 'form-control', placeholder: "A title for your post!" } %><br />
		</div>
	</div>
	<div class='form-group'>
		<%= f.label :content, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.text_area :content, { class: 'form-control', rows: '3', placeholder: "Tell the world how you really feel." } %><br />
		</div>
	</div>
	<div class='form-group'>
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit 'Post', class:'btn btn-default' %>
		</div>
	</div>
<% end %>

